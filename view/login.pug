doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
  // Google Fonts
  link(href='https://fonts.googleapis.com/css?family=Raleway|Ubuntu' rel='stylesheet')
  // Estilos
  link(rel='stylesheet' href='/styles/login.css')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css')
  include includes/linkStyles.pug
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.js')
  title Formulario Iniciar Sesión
body
include includes/navHome.pug 
// Formularios
.contenedor-formularios
  // Contenido de los Formularios
  .contenido-tab
    // Iniciar Sesion
    #iniciar-sesion
      h1 Iniciar Sesi&oacute;n
      span.errorInicioSesion *Error al iniciar sesión usuario o contraseña incorrectos
      br
      br
      form(method='post' action='/home' id='form-login')
        .contenedor-input
          label(for='usuario')
            | Usuario 
            span.req *
          input(type='text' required='' id='usuario' name='usuario' oninput='escuchaInput("usuario")')
        .contenedor-input
          label(for='pass')
            | Contrase&ntilde;a 
            span.req *
          input(type='password' required='' id='pass' name='pass' oninput='escuchaInput("pass")')
          span(id='iconVer' style='display:inline-block')  
             i.bi.bi-eye.iconVer
          span(id='iconNoVer' style='display:none') 
             i.bi.bi-eye-slash.iconNoVer
        p.forgot
          a(href='usuario/login') ¡Cambia tu contrase&ntilde;a!
        input.button.button-block(type='submit' value='Iniciar Sesión')
    //- // Links de los formularios
    - if(validacion === false)
            script(src='../js/modal_login_error.js')    
    script(src='../js/login.js')
