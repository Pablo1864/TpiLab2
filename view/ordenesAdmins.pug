doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Administracion de ordenes
        include includes/linkStyles.pug
        
        link(rel="stylesheet", href="../styles/ordenesStyle.css")
        script(src="https://code.jquery.com/jquery-3.7.1.min.js" type='text/javascript')
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css")
        link(href='https://cdn.datatables.net/v/bs5/dt-1.13.6/b-2.4.2/r-2.5.0/sc-2.2.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/sr-1.3.0/datatables.min.css' rel='stylesheet')
        script(src='https://cdn.datatables.net/v/bs5/dt-1.13.6/b-2.4.2/r-2.5.0/sc-2.2.0/sb-1.6.0/sp-2.2.0/sl-1.7.0/sr-1.3.0/datatables.min.js')
        
    body 
        include includes/nav.pug
        .container-fluid
            form#form_ordenes
                .p-3.m-4.bg-secondary-subtle
                    .p-3.pb-0.m-2
                        h3.text-center Ordenes                            
                    .mb-3.p-4.bg-light#divTablaPaciente
                                #search.mb-3.row.input-group
                                    .col-12.m-2
                                        
                                        #divOrdenesError
                                    label(for='ordenesInput').form-label.col-12.col-lg-1.m-2 Buscar ordenes:
                                    .col-5.p-0
                                        input.form-control#ordenesInput(type='text' aria-describedby='ordenesHelp')
                                        .form-text#ordenesHelp ingresar dni o apellido del paciente de la orden, o deje la caja vacia para mostrar todas las ordenes.
                                    .col-2.p-0
                                        button(type='button').btn.btn-warning.m-0#buscarOrdenes
                                            |Buscar
                                            i.bi.bi-search.ms-2

                                .bg-secondary-subtle.p-3.rounded
                                    table(style='width:100%')#table_ordenes.table.table-striped.table-light.align-middle
                                        thead 
                                            tr 
                                                th
                                                th Paciente
                                                th Dni del paciente
                                                th estado de la orden
                                                th Medico
                                                th muestras en espera
                                                th fecha de creacion
                                                //th fecha de resultados aprox
                                                th Acciones
                                        tbody
        script(src="https://cdn.jsdelivr.net/npm/sweetalert2@10.0.2/dist/sweetalert2.all.min.js")
        script(type='text/javascript' src="../js/ordenesAdmin.js") 